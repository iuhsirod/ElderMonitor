<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SearchFragment"
    android:id="@+id/search_frag">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/search_email_input"
                android:layout_width="225dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/search_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_label"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Search by email"
            android:layout_below="@id/search"/>

        <LinearLayout
            android:id="@+id/search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/search_label">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Results: "/>
            <TextView
                android:id="@+id/num_results"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/searched_list"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/search_result" />
    </RelativeLayout>

</ScrollView>
